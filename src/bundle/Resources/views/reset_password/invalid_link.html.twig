{% extends view_base_layout is defined ? view_base_layout : page_layout %}

{% trans_default_domain 'reset_password' %}

{%- block content -%}
    <h2 class="ez-login__form-headline">{{ 'ezplatform.reset_password.change_password'|trans|desc('Change password') }}</h2>
    <p>
        {{ 'ezplatform.reset_user_password.link_is_not_valid'|trans({ '%forgot_user_password%': path('ezplatform.user.forgot_password')})|raw
        |desc('This link is not valid anymore, you can <a href="%forgot_user_password%">generate a new link</a> to reset your password.') }}
    </p>
{%- endblock content -%}
